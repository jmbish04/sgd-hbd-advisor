{
  "name": "hdb-autonomous-agent",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"wrangler dev\" \"cd client && bun run dev\"",
    "build": "cd client && npm install && npm run build",
    "deploy": "npm run build && npm run migrate:remote && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "migrate:local": "wrangler d1 migrations apply DB --local",
    "migrate:remote": "wrangler d1 migrations apply DB --remote",
    "client:install": "cd client && bun install",
    "setup": "bun install && bun run client:install",
    "type-check": "tsc --noEmit",
    "cf:tail": "wrangler tail",
    "cf:logs": "wrangler tail --format pretty"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@heroui/react": "^2.8.5",
    "@types/leaflet": "^1.9.21",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "agents": "^0.2.25",
    "chart.js": "^4.5.1",
    "drizzle-orm": "^0.36.0",
    "framer-motion": "^12.23.24",
    "hono": "^4.0.0",
    "leaflet": "^1.9.4",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-leaflet": "^5.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.28.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.51.0"
  }
}
