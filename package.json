{
  "name": "hdb-autonomous-agent",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"wrangler dev\" \"bun run dev:client\"",
    "build": "bun install && bun run build:client",
    "deploy": "npm run migrate:remote && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "migrate:local": "wrangler d1 migrations apply DB --local",
    "migrate:remote": "wrangler d1 migrations apply DB --remote",
    "setup": "bun install",
    "type-check": "tsc --noEmit",
    "dev:client": "vite",
    "build:client": "vite build",
    "cf:tail": "wrangler tail",
    "cf:logs": "wrangler tail --format pretty"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.44",
    "@google/generative-ai": "^0.21.0",
    "@hono/zod-openapi": "^1.1.5",
    "agents": "^0.2.25",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.0.0",
    "kysely": "^0.28.8",
    "kysely-d1": "^0.4.0",
    "lucide-react": "^0.555.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^19.2.0",
    "recharts": "^3.5.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.28.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "vite": "^5.4.2",
    "vite-plugin-cloudflare": "*",
    "wrangler": "^4.51.0"
  }
}
