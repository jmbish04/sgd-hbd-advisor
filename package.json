{
  "name": "hdb-autonomous-agent",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"wrangler dev\" \"bun run dev:client\"",
    "build": "bun install && bun run build:client",
    "deploy": "npm run migrate:remote && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "migrate:local": "wrangler d1 migrations apply DB --local",
    "migrate:remote": "wrangler d1 migrations apply DB --remote",
    "setup": "bun install",
    "type-check": "tsc --noEmit",
    "dev:client": "vite",
    "build:client": "vite build",
    "cf:tail": "wrangler tail",
    "cf:logs": "wrangler tail --format pretty"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "agents": "^0.2.25",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.28.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.2",
    "vite-plugin-cloudflare": "*",
    "wrangler": "^4.51.0"
  }
}
