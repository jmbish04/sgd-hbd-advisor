{
  "name": "hdb-autonomous-agent",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"wrangler dev\" \"cd client && npm run dev\"",
    "deploy": "cd client && npm run build && cd .. && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply hdb-stats-db",
    "client:install": "cd client && npm install",
    "setup": "npm install && npm run client:install"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "agents": "^0.2.25",
    "@google/generative-ai": "^0.21.0",
    "drizzle-orm": "^0.36.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "wrangler": "^3.100.0",
    "drizzle-kit": "^0.28.0",
    "@cloudflare/workers-types": "^4.20241127.0",
    "concurrently": "^9.1.0",
    "typescript": "^5.7.2"
  }
}
