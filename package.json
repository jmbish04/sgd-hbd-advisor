{
  "name": "gold-standard-worker-template",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "bun run typegen && vite build",
    "preview": "bun run build && vite preview",
    "deploy": "bun run build && bun run db:migrate:remote && wrangler deploy",
    "typegen": "wrangler types",
    "type-check": "bun run typegen && tsc --noEmit",
    "db:gen": "drizzle-kit generate --config=drizzle.config.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "db:migrate:list": "wrangler d1 migrations list DB",
    "db:migrate:list:local": "wrangler d1 migrations list DB --local",
    "db:migrate:list:remote": "wrangler d1 migrations list DB --remote",
    "db:check": "python scripts/devOps/check_drizzle_config.py",
    "update:wrangler": "npm install wrangler@latest -D",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@ai-sdk/react": "^3.2.14",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "agents": "^0.0.137",
    "ai": "^3.2.14",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.32.1",
    "hono": "^4.5.1",
    "kysely": "^0.27.4",
    "kysely-d1": "^0.3.0",
    "lucide-react": "^0.411.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "recharts": "^2.12.7",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@hono/zod-openapi": "^0.11.1",
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.9.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "bun-types": "^1.1.34",
    "drizzle-kit": "^0.23.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "vite": "^5.4.11",
    "vite-plugin-cloudflare": "^1.0.5",
    "wrangler": "^3.87.0"
  }
}
