{
  "name": "sgd-hbd-advisor",
  "main": "worker/index.ts", // API Worker entrypoint
  "compatibility_date": "2024-07-25",
  "compatibility_flags": ["nodejs_compat"],

  // Vite-plugin-cloudflare uses this during `vite build`
  "build": {
    "command": "bun run build",
    "watch_dir": "src" // Watch the SPA for changes
  },

  // Serve the Vite SPA (built to './dist') as the static site
  "site": {
    "bucket": "./dist"
  },

  // Enable observability
  "observability": {
    "enabled": true
  },

  // Bindings for the API Worker
  "ai": {
    "binding": "AI"
  },

  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "hbd-advisor",
      "database_id": "781a9476-2cf0-43fc-94fc-742a16e39af5"
    }
  ],

  "kv_namespaces": [
    {
      "binding": "KV",
      "id": "80f8c30b48ad4112ba0b5d27e573f6eb"
    }
  ],

  "durable_objects": {
    "bindings": [
      {
        "name": "WS_HANDLER",
        "class_name": "WebSocketServer"
      },
      {
        "name": "MCP_AGENT",
        "class_name": "CloudflareMcpAgent"
      }
    ]
  },

  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["WebSocketServer"]
    },
    {
      "tag": "v2",
      "new_classes": ["CloudflareMcpAgent"]
    }
  ],

  "vars": {
    // API keys for AI SDK
    "GEMINI_API_KEY": "YOUR_GEMINI_API_KEY_HERE"
    // "OPENAI_API_KEY": "YOUR_OPENAI_API_KEY_HERE"

    // MCP Authentication Settings (optional)
    // "MCP_AUTH_ENABLED": "false",
    // "MCP_API_KEYS": "your-api-key-1,your-api-key-2",
    // "CLOUDFLARE_ACCESS_TEAM_DOMAIN": "your-team.cloudflareaccess.com",
    // "CLOUDFLARE_ACCESS_AUDIENCE": "your-audience-tag"
  }
}
